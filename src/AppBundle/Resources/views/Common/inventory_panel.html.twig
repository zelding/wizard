<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Inventory</h3>
    </div>

    <div class="panel-body">
        <div class="row">
            <div class="col-xs-2">
                <strong class="hidden-xs">Name</strong>
                <strong class="visible-xs">Name</strong>
            </div>
            <div class="col-xs-2">
                <strong class="hidden-xs">Category</strong>
                <strong class="visible-xs">Cat</strong>
            </div>
            <div class="col-xs-2">
                <strong class="hidden-xs">Quantity</strong>
                <strong class="visible-xs">Qnt</strong>
            </div>
            <div class="col-xs-2">
                <strong class="hidden-xs">Weight</strong>
                <strong class="visible-xs">W</strong>
            </div>
            <div class="col-xs-2">
                <strong class="hidden-xs">Value</strong>
                <strong class="visible-xs">Val</strong>
            </div>
            <div class="col-xs-2">
                <strong class="hidden-xs">Equipped</strong>
                <strong class="visible-xs">Eq?</strong>
            </div>
        </div>

        {% for catName, categories in inventory.items %}
            {% for subCatName, subcat in categories %}
                {% for item in subcat %}
                    {# @var item AppBundle\Model\Common\Item\Item #}

                    <div class="row">
                        <div class="col-xs-2">{{ item.name }}</div>
                        <div class="col-xs-2">{{ catName }}/{{ subCatName }}</div>
                        <div class="col-xs-2">{{ item.quantity }}</div>
                        <div class="col-xs-2">{{ item.weight }}</div>
                        <div class="col-xs-2">{{ item.price }}</div>
                        <div class="col-xs-2">no</div>
                    </div>

                    {% if item is instanceof('AppBundle\\Model\\Common\\Item\\Equippable') %}
                        <div class="row">
                            <div class="col-xs-2">{{ item.baseSequence }}</div>
                            <div class="col-xs-2">{{ item.baseAttacksPerRound }}</div>
                            <div class="col-xs-2">{{ item.baseAttack }}</div>
                            <div class="col-xs-2">{{ item.baseDefense }}</div>
                            <div class="col-xs-2">{{ item.baseDamage }}</div>
                            <div class="col-xs-2"></div>
                        </div>
                    {% endif %}

                {% endfor %}
            {% endfor %}
        {% endfor %}
    </div>

    <div class="panel-footer">
        Weight: {{ inventory.totalWeight }} / {{ inventory.maxWeight }}.
    </div>
</div>
